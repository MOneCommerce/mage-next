{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@components/*": ["./src/components/*"],
			"@lib/*": ["./src/lib/*"],
			"@pages/*": ["./src/pages/*"],
			"@commons/*": ["./src/commons/*"],
			"@utils/*": ["./src/utils/*"],
			"@graphql/*": ["./src/graphql/*"],
			"@locale/*": ["./src/locale/*"],
			"@providers/*": ["./src/providers/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@ui/*": ["./src/ui/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
